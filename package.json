{
  "name": "lai-monorepo",
  "version": "0.1.0",
  "description": "Linux AI Assistant - Monorepo for core AI engine and desktop/web applications",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install": "pnpm install",
    "build": "pnpm -r build",
    "build:core": "pnpm --filter @lai/core build",
    "build:lai": "pnpm --filter linux-ai-assistant build",
    "dev": "pnpm -r --parallel dev",
    "dev:core": "pnpm --filter @lai/core dev",
    "dev:lai": "pnpm --filter linux-ai-assistant dev",
    "test": "pnpm -r test",
    "test:core": "pnpm --filter @lai/core test",
    "test:lai": "pnpm --filter linux-ai-assistant test",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "clean": "pnpm -r clean && rm -rf node_modules pnpm-lock.yaml"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "eslint": "^8.57.1",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@9.0.0"
}
